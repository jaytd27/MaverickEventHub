<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#414141"
        android:orientation="vertical" >

    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:orientation="vertical" >
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" >
			    
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="3"
			    android:orientation="horizontal" >

			</LinearLayout>
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal"
			    android:layout_weight="1" >

			    <TextView
			        android:id="@+id/tv_edit_workshop"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:drawableLeft="@drawable/logo_meh"
			        android:gravity="center"
			        android:paddingLeft="15dp"
			        android:paddingRight="25dp"
			        android:text="Workshop"
			        android:textAppearance="?android:attr/textAppearanceLarge"
			        android:textColor="#ffffff"
			        android:textSize="22dp" />

			</LinearLayout>

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="3"
			    android:orientation="horizontal" >

			</LinearLayout>
	            
		</LinearLayout>
</LinearLayout>
         <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_margin="1dp"
                android:background="#474747"
                android:orientation="vertical" >

            </LinearLayout>

<ScrollView
    android:id="@+id/sv_workshop"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="1dp"
    android:layout_weight="1"
    android:background="#494949" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
			    
			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="40dp"
			        android:layout_weight="1"
			        android:orientation="vertical" >

			        <LinearLayout
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:orientation="horizontal" >
			        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="1" >

				            <TextView
				                android:id="@+id/tv_edit_workshop_id1"
				                android:layout_width="fill_parent"
				                android:layout_height="fill_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginLeft="1dp"
				                android:layout_marginRight="1dp"
				                android:layout_marginTop="1dp"
				                android:background="#28c15b"
				                android:gravity="center"
				                android:text="ID"
				                android:textColor="#ffffff" />

				        </LinearLayout>    
				        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="0.5" >

				            <EditText
				                android:id="@+id/eT_workshop_id"
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginRight="1dp"
				                android:layout_marginTop="1dp"
				                android:background="#28d25b"
				                android:clickable="false"
				                android:editable="false"
				                android:gravity="center"
				                android:textColor="#ffffff"
				                android:textSize="16dp" >

				            </EditText>

				        </LinearLayout>
			            
			        </LinearLayout>
		        </LinearLayout>

		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="40dp"
		            android:layout_weight="1"
		            android:orientation="vertical" >

		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:orientation="horizontal" >
			        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="1" >

				            <TextView
				                android:id="@+id/tv_edit_workshop_name1"
				                android:layout_width="fill_parent"
				                android:layout_height="fill_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginLeft="1dp"
				                android:layout_marginRight="1dp"
				                android:background="#28c15b"
				                android:gravity="center"
				                android:text="Name"
				                android:textColor="#ffffff" />

				        </LinearLayout>    
				        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="0.5" >

				            <EditText
				                android:id="@+id/eT_workshop_name"
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginRight="1dp"
				                android:background="#28d25b"
				                android:gravity="center"
				                android:textColor="#ffffff"
				                android:textSize="16dp" >

				                <requestFocus />
				            </EditText>

				        </LinearLayout>
			            
			        </LinearLayout>
		        </LinearLayout>

		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="40dp"
		            android:layout_weight="1"
		            android:orientation="vertical" >

		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:orientation="horizontal" >
			        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="1" >

				            <TextView
				                android:id="@+id/tv_edit_workshop_type1"
				                android:layout_width="fill_parent"
				                android:layout_height="fill_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginLeft="1dp"
				                android:layout_marginRight="1dp"
				                android:background="#28c15b"
				                android:gravity="center"
				                android:text="Type"
				                android:textColor="#ffffff" />

				        </LinearLayout>    
				        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="0.5" >

				            <EditText
				                android:id="@+id/eT_workshop_type"
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginRight="1dp"
				                android:background="#28d25b"
				                android:gravity="center"
				                android:textColor="#ffffff"
				                android:textSize="16dp" >

				            </EditText>

				        </LinearLayout>
			            
			        </LinearLayout>
		        </LinearLayout>

		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="40dp"
		            android:layout_weight="1"
		            android:orientation="vertical" >

		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:orientation="horizontal" >
			        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="1" >

				            <TextView
				                android:id="@+id/tv_edit_workshop_date1"
				                android:layout_width="fill_parent"
				                android:layout_height="fill_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginLeft="1dp"
				                android:layout_marginRight="1dp"
				                android:background="#28c15b"
				                android:gravity="center"
				                android:text="Date"
				                android:textColor="#ffffff" />

				        </LinearLayout>    
				        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="0.5" >

				            <EditText
				                android:id="@+id/eT_workshop_date"
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginRight="1dp"
				                android:background="#28d25b"
				                android:gravity="center"
				                android:textColor="#ffffff"
				                android:textSize="16dp" >

				            </EditText>

				        </LinearLayout>
			            
			        </LinearLayout>
		        </LinearLayout>

		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="60dp"
		            android:layout_weight="1"
		            android:orientation="vertical" >

		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:orientation="horizontal" >
			        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="1" >

				            <TextView
				                android:id="@+id/tv_edit_workshop_location1"
				                android:layout_width="fill_parent"
				                android:layout_height="fill_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginLeft="1dp"
				                android:layout_marginRight="1dp"
				                android:background="#28c15b"
				                android:gravity="center"
				                android:text="Location"
				                android:textColor="#ffffff" />

				        </LinearLayout>    
				        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="0.5" >

				            <EditText
				                android:id="@+id/eT_workshop_location"
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginRight="1dp"
				                android:background="#28d25b"
				                android:gravity="center"
				                android:textColor="#ffffff"
				                android:textSize="16dp" >

				            </EditText>

				        </LinearLayout>
			            
			        </LinearLayout>
		        </LinearLayout>

		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="40dp"
		            android:layout_weight="1"
		            android:orientation="vertical" >

		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:orientation="horizontal" >
			        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="1" >

				            <TextView
				                android:id="@+id/tv_edit_workshop_fee1"
				                android:layout_width="fill_parent"
				                android:layout_height="fill_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginLeft="1dp"
				                android:layout_marginRight="1dp"
				                android:background="#28c15b"
				                android:gravity="center"
				                android:text="Fee"
				                android:textColor="#ffffff" />

				        </LinearLayout>    
				        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="0.5" >

				            <EditText
				                android:id="@+id/eT_workshop_fee"
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginRight="1dp"
				                android:background="#28d25b"
				                android:gravity="center"
				                android:textColor="#ffffff"
				                android:textSize="16dp" >

				            </EditText>

				        </LinearLayout>
			            
			        </LinearLayout>
		        </LinearLayout>

		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="100dp"
		            android:layout_weight="1"
		            android:orientation="vertical" >

		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:orientation="horizontal" >
			        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="1" >

				            <TextView
				                android:id="@+id/tv_edit_workshop_description1"
				                android:layout_width="fill_parent"
				                android:layout_height="fill_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginLeft="1dp"
				                android:layout_marginRight="1dp"
				                android:background="#28c15b"
				                android:gravity="center"
				                android:text="Description"
				                android:textColor="#ffffff" />

				        </LinearLayout>    
				        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="0.5" >

				            <EditText
				                android:id="@+id/eT_workshop_description"
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginRight="1dp"
				                android:background="#28d25b"
				                android:gravity="center"
				                android:textColor="#ffffff"
				                android:textSize="16dp" >

				            </EditText>

				        </LinearLayout>
			            
			        </LinearLayout>
		        </LinearLayout>

		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="100dp"
		            android:layout_weight="1"
		            android:orientation="vertical" >

		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:orientation="horizontal" >
			        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="1" >

				            <TextView
				                android:id="@+id/tv_edit_workshop_extra1"
				                android:layout_width="fill_parent"
				                android:layout_height="fill_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginLeft="1dp"
				                android:layout_marginRight="1dp"
				                android:background="#28c15b"
				                android:gravity="center"
				                android:text="Extra Info"
				                android:textColor="#ffffff" />

				        </LinearLayout>    
				        
				        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal"
				        android:layout_weight="0.5" >

				            <EditText
				                android:id="@+id/eT_workshop_extra"
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:layout_marginBottom="1dp"
				                android:layout_marginRight="1dp"
				                android:background="#28d25b"
				                android:gravity="center"
				                android:textColor="#ffffff"
				                android:textSize="16dp" >

				            </EditText>

				        </LinearLayout>
			            
			        </LinearLayout>
		        </LinearLayout>

    </LinearLayout>
    
</ScrollView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:layout_margin="1dp"
    android:background="#474747"
    android:orientation="vertical" >

            </LinearLayout>
</LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_weight="3.2"
     android:background="#515151"
     android:orientation="vertical" >

	<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1.5"
         android:orientation="horizontal" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1.0"
             android:orientation="horizontal" >

             <Button
                 android:id="@+id/btn_edit_workshop_close"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginBottom="12dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_marginTop="12dp"
                 android:background="@android:color/transparent"
                 android:text="CLOSE"
                 android:textColor="@drawable/btn_xml_close"
                 android:textSize="18dp" />

         </LinearLayout>

     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal"
         android:layout_weight="1" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1.5"
             android:orientation="horizontal" >

             <Button
                 android:id="@+id/btn_edit_workshop_previous"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_margin="8dp"
                 android:background="@drawable/btn_concert_previous"
                 android:text=""
                 android:textColor="@drawable/btn_xml_close"
                 android:textSize="18dp" />

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1.0"
             android:orientation="horizontal" >

             <Button
                 android:id="@+id/btn_workshop_update"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginBottom="12dp"
                 android:layout_marginLeft="2dp"
                 android:layout_marginRight="2dp"
                 android:layout_marginTop="12dp"
                 android:background="@android:color/transparent"
                 android:text="UPDATE"
                 android:textColor="@drawable/btn_xml_next"
                 android:textSize="18dp" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1.5"
             android:orientation="horizontal" >

             <Button
                 android:id="@+id/btn_edit_workshop_next"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_margin="8dp"
                 android:background="@drawable/btn_concert_next"
                 android:text=""
                 android:textColor="@drawable/btn_xml_close"
                 android:textSize="18dp" />

         </LinearLayout>

     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1.5"
         android:orientation="horizontal" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1.0"
             android:orientation="horizontal" >

             <Button
                 android:id="@+id/btn_edit_workshop_help"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginBottom="12dp"
                 android:layout_marginLeft="12dp"
                 android:layout_marginRight="20dp"
                 android:layout_marginTop="12dp"
                 android:background="@android:color/transparent"
                 android:text="HELP"
                 android:textColor="@drawable/btn_xml_help"
                 android:textSize="18dp" />

         </LinearLayout>

     </LinearLayout>
	</LinearLayout>
</LinearLayout>
</LinearLayout>