<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/startup"
android:orientation="vertical"
 >

    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1.0" >

    <Button
        android:id="@+id/btn_back"
        style="@style/loginType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:enabled="false"
        android:text="Register"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_start"
        style="@style/loginType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_xml_enter"
        android:drawableLeft="@drawable/btn_enter"
        android:gravity="center_vertical|center_horizontal|right"
        android:paddingLeft="20dp"
        android:paddingRight="50dp"
        android:text="ENTER"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="normal"
        android:typeface="serif" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1.0" >

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btn_next"
        style="@style/loginType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#8dc63f"
        android:drawableLeft="@drawable/btn_register"
        android:enabled="false"
        android:gravity="center_vertical|center_horizontal|right"
        android:paddingLeft="40dp"
        android:paddingRight="65dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="normal"
        android:typeface="serif"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button4"
        style="@style/loginType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:enabled="false"
        android:text=""
        android:visibility="invisible" />

</LinearLayout>
</LinearLayout>


